cat >/etc/hgled.env <<'EOF'
### LED / hgled ###
EXTERNAL_STATE=1
CHECK_URL="http://www.gstatic.com/generate_204"
HTTP_TIMEOUT=5
FALLBACK_INTERVAL=0.1
# (opsional) lokasi bin hgled jika butuh:
# HGLED_BIN=/usr/bin/hgled

### Rotor Clash/YACD ###
CTRL="http://127.0.0.1:9090"
SECRET="12345"
GROUPS="SGR_ACTIVE IDN_ACTIVE WRD_ACTIVE"

# Ping & timing
PING_URL="https://www.gstatic.com/generate_204"
TIMEOUT_MS=3000          # untuk /proxies/<name>/delay
RECHECK_SEC=120          # tunggu 120s sebelum ping berikutnya jika OK
RETRY_GAP_SEC=3          # jeda antar 2 percobaan ulang saat gagal
AFTER_CURL_WAIT_SEC=2    # tunggu 2s setelah curl fallback

# Aksi modem saat semua FAIL
MODEM_CMD="/usr/bin/modem ip"
MODEM_WAIT_SEC=10        # tunggu 10s sebelum ping massal lagi
EOF
chmod 600 /etc/hgled.env
